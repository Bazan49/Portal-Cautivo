# Configuración del Portal Cautivo
# Copia a .env y modifica los valores

# INTERFAZ WIFI (usa: ip link show)
WIFI_INTERFACE="wlo1"

# IP DEL ACCESS POINT (Gateway)
AP_IP="192.168.100.1"

# Red del portal cautivo
AP_NETWORK="192.168.100.0/24"   

# RANGO DHCP
AP_DHCP_START="192.168.100.50"
AP_DHCP_END="192.168.100.150"

# NOMBRE RED WIFI
AP_SSID="PortalCautivo"

# CONTRASEÑA WIFI (8+ caracteres)
AP_PASSWORD="12345678"

# Canal WiFi (1-11)
AP_CHANNEL="5"                          

# PUERTO WEB
PORTAL_PORT="8080"
